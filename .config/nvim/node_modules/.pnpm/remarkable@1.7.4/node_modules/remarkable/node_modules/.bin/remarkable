#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/morven/.config/nvim/node_modules/.pnpm/remarkable@1.7.4/node_modules/remarkable/bin/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/remarkable@1.7.4/node_modules/remarkable/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/remarkable@1.7.4/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/morven/.config/nvim/node_modules/.pnpm/remarkable@1.7.4/node_modules/remarkable/bin/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/remarkable@1.7.4/node_modules/remarkable/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/remarkable@1.7.4/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/remarkable.js" "$@"
else
  exec node  "$basedir/../../bin/remarkable.js" "$@"
fi
