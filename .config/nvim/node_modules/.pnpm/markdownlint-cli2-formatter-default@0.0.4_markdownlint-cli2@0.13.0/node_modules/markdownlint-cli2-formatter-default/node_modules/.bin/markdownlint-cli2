#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/morven/.config/nvim/node_modules/.pnpm/markdownlint-cli2@0.13.0/node_modules/markdownlint-cli2/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/markdownlint-cli2@0.13.0/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/morven/.config/nvim/node_modules/.pnpm/markdownlint-cli2@0.13.0/node_modules/markdownlint-cli2/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/markdownlint-cli2@0.13.0/node_modules:/home/morven/.config/nvim/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../markdownlint-cli2@0.13.0/node_modules/markdownlint-cli2/markdownlint-cli2.js" "$@"
else
  exec node  "$basedir/../../../../../markdownlint-cli2@0.13.0/node_modules/markdownlint-cli2/markdownlint-cli2.js" "$@"
fi
